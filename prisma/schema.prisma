generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name      String  
  email     String   @unique 
  password   String
  projects   Project[]
  
}

model Project{
  id         Int      @id @default(autoincrement())
  name      String
  description String
  vectortable String  @unique
  pdf_file_key String
  status     Status   @default(CREATING)
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
  chatMessages ChatMessage[]
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [tableId], references: [vectortable])
  tableId String
  sender    String   @default("user")
  message   String
  timestamp DateTime @default(now())
}

enum Status {
  CREATING
  FAILED
  COMPLETED
}